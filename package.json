{
	"name": "@natlibfi/melinda-record-import-importer",
	"description": "Record importer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-importer",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-importer/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-importer.git"
	},
	"license": "MIT",
	"version": "2.0.4-alpha.5",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test": "npm run lint && npm run test:base",
		"test:base": "cross-env NODE_ENV=test nyc mocha",
		"_test": "npm run lint && npm run test:base",
		"_test:dev": "npm run lint:dev && npm run test:base && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"watch:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test nodemon",
		"dev": "cross-env NODE_ENV=test nodemon",
		"dev:debug": "cross-env NODE_ENV=test DEBUG=@natlibfi/* nodemon"
	},
	"dependencies": {
		"@babel/runtime": "^7.22.11",
		"@natlibfi/marc-record": "^8.0.2",
		"@natlibfi/melinda-backend-commons": "^2.2.1",
		"@natlibfi/melinda-commons": "^13.0.6",
		"@natlibfi/melinda-record-import-commons": "^10.2.1",
		"@natlibfi/melinda-rest-api-client": "^4.0.3",
		"@natlibfi/melinda-rest-api-commons": "^4.0.11",
		"amqplib": "^0.10.3",
		"http-status": "^1.6.2",
		"pretty-print-ms": "^1.0.5"
	},
	"devDependencies": {
		"@babel/cli": "^7.22.10",
		"@babel/core": "^7.22.11",
		"@babel/node": "^7.22.10",
		"@babel/preset-env": "^7.22.10",
		"@babel/register": "^7.22.5",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.1",
		"@natlibfi/fixugen": "^2.0.1",
		"@natlibfi/fixugen-http-client": "^3.0.0",
		"@natlibfi/fixura": "^3.0.1",
		"@onify/fake-amqplib": "^1.0.0",
		"babel-plugin-istanbul": "^6.1.1",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.3.8",
		"chai-as-promised": "^7.1.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.48.0",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.1",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"mocha": {
		"spec": [
			"src/*.spec.js",
			"src/**/*.spec.js"
		],
		"require": [
			"@babel/register"
		],
		"inline-diffs": true,
		"maxDiffSize": 25000,
		"bail": true,
		"exit": true
	},
	"nodemonConfig": {
		"exec": "npm run _test:dev",
		"watch": [
			"src/*",
			"test-fixtures/*"
		]
	},
	"nyc": {
		"exclude": [
			"src/*.spec.js",
			"src/**/*.spec.js"
		],
		"reporter": [
			"text"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
